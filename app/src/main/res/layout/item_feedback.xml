<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_8">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatar"
        android:src="@drawable/landscaping"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:padding="5dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tvFullName"
        app:layout_constraintTop_toTopOf="@id/userAvatar"
        app:layout_constraintBottom_toBottomOf="@id/userAvatar"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@id/userAvatar"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="charlies89"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/userAvatar"
        app:layout_constraintBottom_toBottomOf="@id/userAvatar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:numStars="5"
        android:rating="3"
        android:layout_margin="@dimen/margin_8"
        android:progressTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/feedbackTitle"
        android:textColor="@color/sky"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/userAvatar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:text="Double gates across drive"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/feedbackBody"
        app:layout_constraintTop_toBottomOf="@id/feedbackTitle"
        android:text="Very friendly, turned up and completed work as agreed. Would use Simon again. Very friendly, turned up and completed work as agreed. Would use Simon again."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cratedTime"
        android:layout_marginTop="4dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedbackBody"
        android:text="- 15th May, 2020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>